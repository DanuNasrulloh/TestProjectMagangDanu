<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F9FC">

    <!-- App Bar -->
    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#19BFA9"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Kembali"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Detail Laporan"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomAction"
        android:layout_below="@id/appbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tanggal Pelaporan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Pelaporan"
                android:textColor="#475569"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:textColor="#1E293B"
                android:textSize="13sp" />

            <!-- Tipe -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tipe"
                android:textColor="#475569"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:textColor="#1E293B"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Deskripsi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Deskripsi"
                android:textColor="#475569"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:textColor="#1E293B"
                android:textSize="13sp" />

            <!-- Bukti Foto -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bukti Foto"
                android:textColor="#475569"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/containerBuktiFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBukti1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_card_inner"
                     />

                <ImageView
                    android:id="@+id/imgBukti2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_card_inner"
                    />
            </LinearLayout>

            <!-- Tanggapan Petugas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tanggapan Petugas"
                android:textColor="#475569"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/cardTanggapan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvTanggapan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1E293B"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvTanggapanTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Minggu, 20 Januari 2025"
                    android:textColor="#8AA0B2"
                    android:textSize="10sp"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Bottom Spacer -->
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/bottomAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="6dp">

        <Button
            android:id="@+id/btnProses"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Proses"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9900"
             />
    </LinearLayout>

</RelativeLayout>
