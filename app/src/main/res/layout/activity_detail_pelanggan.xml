<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout: Detail Pelanggan (Catat Data)
  NOTE: Place this file under res/layout/ in a real Android project.
  Screenshot reference implemented: Header card with customer info, photo row, meter input, save button.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollDetailPelanggan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FA"
    android:padding="12dp"
    tools:context=".ui.detail.DetailPelangganActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#19BFA9"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Kembali"
                android:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Detail Laporan"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Card: Customer Basic Info -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCustomerInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp"
                android:background="@drawable/bg_catatdat">

                <!-- Top Row: ID and QR/Scan icon placeholder -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvCustomerId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ID - 081000013690"
                        android:textStyle="bold"
                        android:textColor="#101B1D"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/ivScan"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Scan"
                        android:src="@drawable/ic_note" />
                </LinearLayout>

                <!-- Info Rows -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Nama Pelanggan -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nama Pelanggan"
                            android:textColor="#7A8A92"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tvNamaPelanggan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Andi Sebastian"
                            android:textColor="#101B1D"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Hari/Tanggal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hari/Tanggal"
                            android:textColor="#7A8A92"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tvTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Senin, 15 September 2025"
                            android:textColor="#101B1D"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Jam -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jam"
                            android:textColor="#7A8A92"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tvJam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15.30 WIB"
                            android:textColor="#101B1D"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Alamat -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Alamat"
                            android:textColor="#7A8A92"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tvAlamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jl. Kapten Nol, Puruk Cahu"
                            android:textColor="#101B1D"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Latlong -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Latlong"
                            android:textColor="#7A8A92"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/tvLatLong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-0.623... , 114.571..."
                            android:textColor="#101B1D"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Foto Section Title -->
        <TextView
            android:id="@+id/tvFotoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto"
            android:textStyle="bold"
            android:textColor="#101B1D"
            android:layout_marginBottom="8dp" />

        <!-- Row of images (two placeholders) -->
        <LinearLayout
            android:id="@+id/layoutImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="#EEEEEE"
                android:foreground="?android:attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/ivFotoRumah"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Foto Rumah"
                    tools:src="@android:drawable/ic_menu_camera" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tap untuk ambil"
                    android:textSize="11sp"
                    android:textColor="#555"
                    tools:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#EEEEEE"
                android:foreground="?android:attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/ivFotoMeter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Foto Meter"
                    tools:src="@android:drawable/ic_menu_camera" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tap untuk ambil"
                    android:textSize="11sp"
                    android:textColor="#555"
                    tools:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <!-- Angka Meter Label -->
        <TextView
            android:id="@+id/tvAngkaMeterLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angka Meter"
            android:textStyle="bold"
            android:textColor="#101B1D"
            android:layout_marginBottom="4dp" />

        <!-- Input Angka Meter -->
        <EditText
            android:id="@+id/etAngkaMeter"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:inputType="number"
            android:gravity="center_vertical"
            android:text="000001"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:maxLength="12"
            android:importantForAutofill="no"
            android:imeOptions="actionDone"
            android:layout_marginBottom="24dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSimpanData"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Simpan Data"
            android:textAllCaps="false"
            android:backgroundTint="#00B894"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

        <!-- Bottom spacing for safe area -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />
    </LinearLayout>
</ScrollView>

