<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FA">

    <!-- App Bar -->
    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#19BFA9"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Kembali"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Detail Laporan"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Komentar -->
            <TextView
                android:id="@+id/tvLabelKomentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukan Komentar"
                android:textColor="#1F1F1F"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilKomentar"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:boxBackgroundColor="#FFFFFFFF"
                app:boxStrokeColor="#08B38D"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etKomentar"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:hint="Tambahkan komentar atau deskripsi ..."
                    android:padding="8dp"
                    android:overScrollMode="always"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Foto Sebelum Perbaikan -->
            <TextView
                android:id="@+id/tvLabelSebelum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Foto Sebelum Perbaikan"
                android:textColor="#1F1F1F"
                android:textStyle="bold"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/containerFotoSebelum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/imgSebelum1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:contentDescription="Foto sebelum perbaikan 1"
                    android:src="@drawable/ic_launcher_background"
                    android:background="@drawable/bg_card_inner" />

                <FrameLayout
                    android:id="@+id/frameAddSebelum"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_photo_placeholder">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_camera"
                            android:contentDescription="Add" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textSize="20sp"
                            android:textColor="#08B38D"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Foto Setelah Perbaikan -->
            <TextView
                android:id="@+id/tvLabelSesudah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Setelah Perbaikan"
                android:textColor="#1F1F1F"
                android:textStyle="bold"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/containerFotoSesudah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/imgSesudah1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:contentDescription="Foto setelah perbaikan 1"
                    android:src="@drawable/ic_launcher_background"
                    android:background="@drawable/bg_card_inner" />

                <FrameLayout
                    android:id="@+id/frameAddSesudah"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_photo_placeholder">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_camera"
                            android:contentDescription="Add" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textSize="20sp"
                            android:textColor="#08B38D"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Tombol Kirim -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnKirim"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_margin="16dp"
        android:text="Kirim Laporan"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#08B38D"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
