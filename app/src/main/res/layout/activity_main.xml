<?xml version="1.0" encoding="utf-8"?>
<!-- Beranda/Home layout based on the provided mockup. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF3F7">

    <!-- Scrollable content area -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Header: Brand left, period right -->
            <RelativeLayout
                android:layout_marginTop="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERUMDA"
                        android:textAllCaps="true"
                        android:textColor="#16BFA9"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinsbold" />

                    <TextView
                        android:id="@+id/tvSubBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danum Pomolum"
                        android:textColor="#202427"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="55sp"
                        android:text="Periode"
                        android:textColor="#6B7684"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvPeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="September 2025"
                        android:textColor="#111111"
                        android:textStyle="bold"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Stats Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pencatatan Hari Ini"
                    android:textColor="#2A2A2A"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsregular"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_card_inner"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTodayCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="#16BFA9"
                        android:textSize="44sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Progress section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress Bulanan"
                        android:textColor="#2A2A2A"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppinsregular"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvProgressFraction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="34/90"
                        android:textColor="#16BFA9"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <ProgressBar
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:id="@+id/progressMonthly"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="15sp"
                    android:background="@android:color/transparent"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="43"
                    android:progressDrawable="@drawable/progress_horizontal_teal" />
            </LinearLayout>

            <!-- Menu Pilihan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Menu Pilihan"
                android:textColor="#2A2A2A"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_card"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- 4 equally spaced menu tiles -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:background="@drawable/bg_menu_tile">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_catatan_meter"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Catat Meter"
                        android:textColor="#2A2A2A"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:background="@drawable/bg_menu_tile">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_person"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="List Hari Ini"
                        android:textColor="#2A2A2A"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:background="@drawable/bg_menu_tile">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_faq"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="FAQ"
                        android:textColor="#2A2A2A"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp">
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:gravity="center"
                        android:background="@drawable/bg_menu_tile">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_report"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Laporan"
                        android:textColor="#2A2A2A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_nav"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_garisnav"
                android:tint="#16BFA9" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:tint="#16BFA9" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beranda"
                android:textColor="#16BFA9"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navListPelanggan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_people"
                android:tint="#9AA6B2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List Pelanggan"
                android:textColor="#9AA6B2"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navRiwayat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_receipt"
                android:tint="#9AA6B2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat"
                android:textColor="#9AA6B2"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:tint="#9AA6B2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#9AA6B2"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

