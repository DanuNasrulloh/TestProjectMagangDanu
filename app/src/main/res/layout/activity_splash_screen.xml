<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Brand: title and subtitle, centered on screen -->
    <LinearLayout
        android:id="@+id/brand_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_brand_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERUMDA"
            android:textAllCaps="true"
            android:textColor="#11BFAE"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.03"
            android:fontFamily="@font/poppinsbold" />

        <TextView
            android:id="@+id/tv_brand_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Danum Pomolum"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/poppinsregular" />
    </LinearLayout>

    <!-- Decorative waves at the bottom (no images, only shapes) -->
    <FrameLayout
        android:id="@+id/waves_container"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true">

        <!-- Back wave (subtle) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="bottom|start"
            android:background="@drawable/home"
            android:translationX="0dp" />

        <!-- Front wave (stronger color) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/home"
            android:translationX="0dp" />
    </FrameLayout>

</RelativeLayout>

